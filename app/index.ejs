<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>timesheet-app</title>
    <% if (htmlWebpackPlugin.options.appModules) { %>
    <!-- Add `app/node_modules` to global paths so `require` works properly in development -->
    <script>
      require('module').globalPaths.push('<%= htmlWebpackPlugin.options.appModules.replace(/\\/g, '\\\\') %>')
    </script>
    <% } %>
</head>
<body>

<div id="app">
    <nav id="app-nav" class="nav" v-show="appNavigationIsShown">
        <div class="container">
            <div class="nav-left">
                <router-link to="/sign-in-page" class="button is-primary nav-item" v-show="signOutIsShown">
                    <span class="icon"><i class="fa fa-sign-out" aria-hidden="true"></i></span>
                    <span>Sign Out</span>
                </router-link>
                <router-link to="/list-page" class="button is-primary nav-item" v-show="backIsShown">
                    <span class="icon"><i class="fa fa-step-backward" aria-hidden="true"></i></span>
                    <span>Back</span>
                </router-link>
            </div>

            <div class="nav-right">
                <router-link to="/search-page" class="button is-primary is-pulled-right nav-item" v-show="searchIsShown">
                    <span class="icon"><i class="fa fa-plus" aria-hidden="true"></i></span>
                </router-link>
            </div>
        </div>
    </nav>

    <router-view></router-view>
</div>

<!-- webpack builds are automatically injected -->
</body>
</html>